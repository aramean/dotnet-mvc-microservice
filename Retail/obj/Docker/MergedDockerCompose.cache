networks:
  retail-orders-net:
    driver: bridge
services:
  api:
    build:
      context: /Users/josef/Projects/dotnet-mvc-microservice/Retail
      dockerfile: src/Dockerfile
    depends_on:
    - db
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_HTTPS_PORT: '44396'
      ASPNETCORE_URLS: https://+:443;http://+:80
    image: api
    links:
    - db
    networks:
      retail-orders-net: {}
    ports:
    - published: 55861
      target: 80
    - published: 44396
      target: 443
    volumes:
    - /Users/josef/.aspnet/https:/root/.aspnet/https:ro
    - /Users/josef/.microsoft/usersecrets:/root/.microsoft/usersecrets:ro
  db:
    container_name: retail-orders-mssql
    environment:
      ACCEPT_EULA: "Y"
      MSSQL_PID: Developer
      SA_PASSWORD: yourStrong(!)Password
    hostname: orders-dbhost
    image: mcr.microsoft.com/mssql/server:2017-latest-ubuntu
    networks:
      retail-orders-net: {}
    ports:
    - published: 1433
      target: 1433
    restart: always
version: '3.4'